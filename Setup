import pygame

pygame.init()

screen_width = 880
screen_height = 600
screen = pygame.display.set_mode((screen_width, screen_height))
pygame.display.set_caption("Game")

white = (255, 255, 255)
black = (0,0,0)
yellow = (255, 255, 200)
red = (215, 50, 80)
green = (0, 255, 0)
blue = (50, 150, 215)

game = True
while game:
    for event in pygame.event.get(): 
        if event.type == pygame.QUIT:
            game = False
    pygame.display.update()

pygame.quit()
quit()
